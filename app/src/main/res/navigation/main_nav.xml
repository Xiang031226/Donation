<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/login_fragment">
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.donation.LoginFragment"
        android:label="Login Fragment"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/register_fragment"
        android:name="com.example.donation.RegisterFragment"
        android:label="Register Fragment" />
        <action
            android:id="@+id/action_register_fragment_to_login_fragment"
            app:destination="@id/login_fragment" />
    <fragment
        android:id="@+id/forget_password_fragment"
        android:name="com.example.donation.ForgetPasswordFragment"
        android:label="fragment_forget_password"
        tools:layout="@layout/fragment_forget_password" />
</navigation>