<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@color/colorBackgroundDay</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>

        <item name="android:windowBackground">@color/colorBackgroundNight</item>
    </style>

    <style name="login_title_style">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">120dp</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="login_icon_style">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="login_input_style">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="login_button_style">
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
    </style>

    <style name="register_now_style">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="register_title_style">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="register_password_format">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="dashboard_container">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/container_border</item>
    </style>

    <style name="dashboard_container_text">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

</resources>