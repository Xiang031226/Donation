<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@color/colorBackgroundDay</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>

        <item name="android:windowBackground">@color/colorBackgroundNight</item>
    </style>

    <style name="login_title_style">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="login_button_style">
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
    </style>

    <style name="register_now_style">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="register_title_style">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="register_password_format">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="dashboard_container">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/container_border</item>
    </style>

    <style name="dashboard_container_text">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>


    <style name="picker">
        <item name="android:background">@drawable/tab_border</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>