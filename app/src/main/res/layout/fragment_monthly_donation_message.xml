<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#CEE5ED"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    tools:context=".Profile.MonthlyDonation.MonthlyDonationMessageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Don't have a monthly donation yet?"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineHeight="25dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Have an even bigger impact by helping vulnerable families every month."
            android:textAlignment="center"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/donate_monthly_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FABC4E"
            android:text="Donate once a month"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>