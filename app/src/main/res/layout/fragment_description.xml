<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nested_scroll_view"
        tools:ignore="ContentDescription" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Our Tiger"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <ImageView
                android:id="@+id/title_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/image1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Less than 150 left"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#6c6c6c" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="18dp"
                android:text="There are now less than 150 Malayan tigers left in Malaysia compared to the 3,000 tigers that once roamed our forests in the 1950s."
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#393939" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Threat"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#6c6c6c" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="18dp"
                android:text="The future of our Malayan tigers is at stake as their existence is severely threatened by poaching and the illegal wildlife trade, habitat loss due to deforestation and fragmentation, as well as overhunting of the tigers' main prey."
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#393939" />

            <ImageView
                android:id="@+id/title2_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/image1" />

            <ImageView
                android:id="@+id/title3_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/image1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="We must act now"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#6c6c6c" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="18dp"
                android:text="The future of our Malayan tigers is at stake as their existence is severely threatened by poaching and the illegal wildlife trade, habitat loss due to deforestation and fragmentation, as well as overhunting of the tigers' main prey."
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#393939" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="18dp"
                android:text="We urgently need your support to help our frontliners in the field. WWF-Malaysia conducts intensive patrolling in Belum-Temengor and monitors poaching hotspots, whilst channeling relevant information to enforcement agencies. This has enabled:
                              - More ground to be patrolled.
                              - More threats to be uncovered.
                              - More snares to be removed.
                              - More arrests of poachers."
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#393939" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        >

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#B6B5B5"
            app:layout_constraintBottom_toTopOf="@id/bottom_bar"
            />

        <Button
            android:id="@+id/donate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donate"
            android:padding="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>