<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    tools:context=".Profile.MonthlyDonation.MonthlyDonationProgressFragment">

    <TextView
        android:id="@+id/donation_goal_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donation Goal"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/donation_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Our Orang Utans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donation_goal_textview"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/donation_goal_textview"
        app:layout_constraintBottom_toBottomOf="@id/donation_goal"
        />

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/donation_goal"
        android:layout_marginTop="15dp"
        android:background="#B6B6B6"
        />

    <TextView
        android:id="@+id/donation_amount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donation Amount"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator1"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/donation_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 10.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donation_amount_textview"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/donation_amount_textview"
        app:layout_constraintBottom_toBottomOf="@id/donation_amount"
        />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/donation_amount"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#B6B6B6"
        />

    <TextView
        android:id="@+id/payment_method_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator2"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:id="@+id/payment_method_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_credit_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/payment_method"
        app:layout_constraintBottom_toBottomOf="@id/payment_method"
        />

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit Card"
        app:layout_constraintStart_toEndOf="@id/payment_method_icon"
        app:layout_constraintTop_toBottomOf="@id/payment_method_textview"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/payment_method_textview"
        app:layout_constraintBottom_toBottomOf="@id/payment_method"
        />

    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/payment_method"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#B6B6B6"
        />

    <TextView
        android:id="@+id/progress_monthly_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress Monthly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator3"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/starting_bracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="( "
        app:layout_constraintStart_toEndOf="@id/progress_monthly_title"
        app:layout_constraintTop_toTopOf="@id/progress_monthly_title"
        app:layout_constraintBottom_toBottomOf="@id/progress_monthly_title"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/current_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/starting_bracket"
        app:layout_constraintTop_toTopOf="@id/progress_monthly_title"
        app:layout_constraintBottom_toBottomOf="@id/progress_monthly_title"
        android:text="7"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / 12 )"
        app:layout_constraintStart_toEndOf="@id/starting_bracket"
        app:layout_constraintTop_toTopOf="@id/progress_monthly_title"
        app:layout_constraintBottom_toBottomOf="@id/progress_monthly_title"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleY="2"
        app:layout_constraintTop_toBottomOf="@id/progress_monthly_title"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/monthly_donated_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 70.00 donated"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/certificate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claim Certificate at 100%"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/monthly_donated_amount"
        app:layout_constraintBottom_toBottomOf="@id/monthly_donated_amount"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_or_claim_certificate_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Cancel Subscription"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/monthly_donated_amount"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:backgroundTint="#82B1FF"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>